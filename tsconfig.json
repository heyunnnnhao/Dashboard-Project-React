{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/"],
      "utils/*": ["src/utils/*"],
      "pages/*": ["src/pages/*"],
      "styles/*": ["src/styles/*"],
      "db/*": ["src/db/*"],
      "lib/*": ["src/lib/*"],
      "assets/*": ["assets/*"],
      "constant": ["src/constants.ts"]
    }
  },
  "include": ["src/next-env.d.ts", "src/**/*"],
  "exclude": ["node_modules", "assets"]
}
